<div class="header">
    <h1>Let's Eat Burgers!</h1>
</div>

<div class="container">
    <div class="row">
        <div class="eat">
            <h2>Get your Burger on!</h2>

            <div class="col left">

                <ul class="burger-list">
                    {{#each burgers}}
                    {{#unless devoured}}
                    <li>
                        {{this.burger_name}}
                        <button type="button" class="eatChange btn" data-id="{{id}}" data-newBurger="{{burgers}}">

                            {{#if devoured}}EATEN!{{else}}Eaten!{{/if}}
                        </button>

                        <button type="button" class="burgerDelete" data-id="{{this.id}}">DELETE!</button>
                    </li>

                    {{/unless}}
                    {{/each}}

                </ul>
            </div>
        </div>
        <div class="col right">
            <div class="devoured-list">
                <h2>Got your Burger on!</h2>
                <ul>
                    {{#each burgers}}
                    {{#if devoured}}
                    <li>{{this.burger_name}}</li>
                    {{/if}}
                    {{/each}}
                </ul>
            </div>


        </div>
    </div>
    <br><br>
    <div class="row">
        <div class="col">
            <div class="add-burger">
                <h2>Add more Burgers to get on!</h2>
                <form class="create-form" action="/api/burgers" method="POST">

                    <div class="form-group">
                        <label for="ca">Name Your Burger:</label>
                        <input type="text" class="burger_id" name="burger_name" value="">
                        <br><button class="btn" type="submit">ADD That Burger!</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>